{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitUseStrict": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "next-koa/server"
  ],
  "exclude": [
    "/node_modules/",
    "/.next/"
  ]
}
